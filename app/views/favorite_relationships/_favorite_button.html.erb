<% if current_user.favorite?(micropost) %>
  <%= form_with(model: current_user.favorite_relationships.find_by(micropost_id: micropost.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :current_user_id, current_user.id %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'Unlike', class: 'btn btn-danger btn-sm' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.favorite_relationships.build, local: true) do |f| %>
    <%= hidden_field_tag :current_user_id, current_user.id %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'Like', class: 'btn btn-success btn-sm' %>
  <% end %>
<% end %>